= form_for @volunteer do |f|
  -if @volunteer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@volunteer.errors.count, "error")} prohibited this volunteer from being saved:"
      %ul
        - @volunteer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state_id
    = f.number_field :state_id
  .field
    = f.label :zip_code
    = f.text_field :zip_code
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
