- @content_for_title = 'Change Your Password'

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'mainForm' }) do |f|
  %fieldset
    = f.hidden_field :reset_password_token
    .loginRow.noborder
      = f.label :password, "New password"
      .loginInput
        = f.password_field :password
      .fix
    .loginRow.noborder
      = f.label :password_confirmation, "Confirm new password"
      .loginInput
        = f.password_field :password_confirmation
      .fix
    .loginRow
      = f.submit 'Change my password', :class => 'greenBtn submitForm'
      .fix
= render :partial => "devise/shared/links"