- @content_for_title = 'Change Your Password'

.loginPanel
  .head
    %h5.iUser #{page_title}
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'mainForm' }) do |f|
    %fieldset
      = f.hidden_field :reset_password_token
      .loginRow.noborder
        = f.label :password, "New password"
        .loginInput
          = f.password_field :password
        .fix
      .loginRow.noborder
        = f.label :password_confirmation, "Confirm password"
        .loginInput
          = f.password_field :password_confirmation
        .fix
      .loginRow
        = f.submit 'Change my password', :class => 'greenBtn submitForm'
        .fix

.loginPanel
  .head
    %h5.iSettings Options
  .body
    = render :partial => "devise/shared/links"
  .fix