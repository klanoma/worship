- if user_signed_in?
  %li
    %a{:href => edit_user_registration_path}
      = image_tag("brain/icons/topnav/profile.png")
      %span Profile
  %li
    %a{:href => "#"}
      = image_tag("brain/icons/topnav/settings.png")
      %span Settings
  %li
    %a{:href => destroy_user_session_path, :data => {:method => "delete"}}
      = image_tag("brain/icons/topnav/logout.png")
      %span Logout

- else
  %li
    %a{:href => new_user_registration_path}
      = image_tag("brain/icons/topnav/register.png")
      %span Register
  %li
    %a{:href => new_user_session_path}
      = image_tag("brain/icons/topnav/login.png")
      %span Login
