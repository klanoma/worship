- if user_signed_in?
  %li
    %a{:href => edit_user_registration_path}
      = image_tag("brain/icons/light/user2.png")
      %span Profile
  %li
    %a{:href => "#"}
      = image_tag("brain/icons/light/cog2.png")
      %span Settings
  %li
    %a{:href => destroy_user_session_path, :data => {:method => "delete"}}
      = image_tag("brain/icons/light/logoff.png")
      %span Logout

- else
  %li
    %a{:href => new_user_registration_path}
      = image_tag("brain/icons/light/add.png")
      %span Register
  %li
    %a{:href => new_user_session_path}
      = image_tag("brain/icons/light/key.png")
      %span Login
